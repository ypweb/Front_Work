/*form组件*/
.wx-form-wrap {
  padding: @form-gap-left;

  > li {
    display: inline-block;
    margin-bottom: @form-item-gap-top;
    width: 100%;
    height: @form-item-height;
  }
  .wx-form-label {
    display: inline-block;
  }
  .wx-form-item2x {
    height: @form-item-height * 2;
  }
  .wx-form-item3x {
    height: @form-item-height * 3;
  }
  .wx-form-item4x {
    height: @form-item-height * 4;
  }
  .wx-form-item5x {
    height: @form-item-height * 5;
  }
}

/*表单偏移*/
.wx-form-indent {
  @indent-font-size: @form-font-size - 2;
  @input-icon-width: 20px;
  @input-icon-gap-right: 10px;
  @input-gap-top: (@form-item-height - @form-item-inputgap-top)/2;

  /*偏移部分*/
  .wx-form-label {
    .layout-relative-base();
    height: 100%;
    width: 100%;
    font-size: 0;
  }
  .wx-form-labelauto{
    height:auto;
  }
  /*选项*/
  .wx-form-require,
  .wx-form-name,
  .wx-form-text {
    display: inline-block;
    height: 100%;
  }
  /*高亮必填*/
  .wx-form-require {
    .layout-absolutel-base();
    color: @color-red1;
    font-size: @indent-font-size  + 2;
    line-height: @form-item-height * 1.15;
  }
  /*表单名称*/
  .wx-form-name {
    .layout-absolutel-base();
    line-height: @form-item-height;
    color: @color-gray9;
    font-size: @indent-font-size;
    text-align: right;
    padding: 0 .2em 0 0;
  }
  /*表单输入项*/
  .wx-form-text {
    width: 100%;
    input[type="text"],
    input[type="password"],
    input[type="date"],
    textarea {
      .transition-base(all .03s ease-in .02s);
      display: inline-block;
      height: 100%;
      width: 100%;
      font-weight: normal;
      border: 1px solid @color-gray12;
      background-color: @color-global-white;
      .border-radius-base(4px);
      font-size: @indent-font-size + 2;
      color: @color-gray3;
      &:focus {
        border: 1px solid @color-gray10;
      }
    }
    input[type="text"],
    input[type="password"],
    input[type="date"]{
      padding: @input-gap-top @input-gap-top/2;
      line-height: @form-item-inputgap-top;
    }
    textarea {
      resize: none;
      padding: @input-gap-top/2;
      line-height: @indent-font-size + 10;
      &:disabled {
        border: 1px solid @color-gray13;
        background-color: lighten(@color-gray15, 2%);
        color: @color-gray8;
      }
    }
  }
  /*单选和多选*/
  .wx-form-rc {
    @rc-gap: (@form-item-height - @input-icon-width)/2;
    padding: @rc-gap 0;
    min-width: @form-item-height/2;
    height: @form-item-height;
    font-size: @indent-font-size;
    color: @color-gray6;
    margin: 0 @rc-gap 0 0;
    display: inline-block;
    text-align: center;
    vertical-align: middle;
    line-height: @form-item-height - (@form-item-inputgap-top * 2);
    input[type="radio"],
    input[type="checkbox"] {
      vertical-align: middle;
      width: 16px;
      height: 16px;
      margin: 0 5px;
      display: inline-block;
    }
  }
  /*模拟单选和多选*/
  .wx-form-rc-simulation {
    .layout-relative-base();
    cursor: pointer;
    > input[type="checkbox"],
    > input[type="radio"] {
      width: 0 !important;
      height: 0 !important;
      display: none;
      margin: 0;
      .opacity-base(0);
    }
    &,
    &:hover,
    &:active,
    &:focus{
      .user-tap-base();
    }
    &:before {
      .layout-absolutel-base(0, (@form-item-height - @input-icon-width)/2);
      .box-sizing-base();
      display: inline-block;
      overflow: hidden;
      width: @input-icon-width;
      height: @input-icon-width;
      margin:2px 0 0 .5em;
      content: '';
      color: @color-gray11;
      border: 1px solid @color-gray11;
      background-color: @color-global-white;
    }
    &:after {
      float: left;
      height: @form-item-height;
      margin:0 0 0 @input-icon-width + @indent-font-size * .5 + @input-icon-gap-right;
      white-space: nowrap;
      display: inline-block;
      color: @color-gray9;
      content: attr(data-title);
      font-size: @indent-font-size;
    }
  }
  .simulation-radio{
    &:before {
      .border-radius-base(50%);
    }
  }
  /*单选多选激活*/
  .simulation-radio.simulation-checked{
    &:before {
      border: @input-icon-width * .25 solid @main-theme-color;
    }
  }
  /*多选激活*/
  .simulation-checkbox.simulation-checked{
    &:before {
      line-height: .7em;
      overflow:visible;
      content:'\e66b';
      text-indent:-5px;
      color:@main-theme-color;
      font-size:@font-size-base * 1.9;
      font-family: 'zw_iconfont';
      border: none;
    }
  }
  /*提示信息*/
  .wx-form-tip {
    @tip-fonts-size:@indent-font-size + 4;

    .layout-absolutelb-base(0, -@tip-fonts-size);
    .transition-base(all .5s ease-in .02s);
    display: inline-block;
    width: 100%;
    height: 0;
    line-height: @indent-font-size;
    color: @color-red1;
    font-size: @indent-font-size;
    text-indent: @input-gap-top/2;
    .opacity-base(0);
    &:not(:empty) {
      height: @tip-fonts-size;
      .opacity-base(100);
    }
  }
}

