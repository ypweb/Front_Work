/*工具类*/
.wx-tool-function() {
  @li-width: @tool-list-width - @tool-list-gap * 2;
  @span-icon-width: 14px;

  .wx-tool-lb-wrap {
    .layout-fixedlb-base();
  }

  .wx-tool-wrap {
    width: 0;
    height: 0;
    /*遮罩层*/
    .wx-tool-mask {
      .layout-fixedl-base(0, 0, 200);
      width: 100vw;
      height: 100vh;
      background-color: rgba(0, 0, 0, .6);
    }
    /*按钮列表*/
    .wx-tool-list {
      margin: 0;
      width: @tool-list-width;
      padding: @tool-list-gap;
      > li {
        .border-radius-base(50%);
        cursor: pointer;
        width: @li-width;
        height: @li-width;
        font-size: 0;
        margin: 0 0 @tool-list-gap 0;
        &:before {
          width: 100%;
          height: 100%;
          display: inline-block;
          line-height: @tool-list-width - @tool-list-gap * 2.5;
          text-align: center;
        }
        &,
        &:hover,
        &:active,
        &:focus {
          .user-tap-base();
        }
      }
    }
    /*第一层切换按钮*/
    .wx-tool-toggle {
      .layout-fixedlb-base(0, @tool-list-gap, 250);
      height: @tool-list-width;
      > li:after {
        color: @color-gray6;
      }
      /*切换操作*/
      .tool-list-toggle {
        background-color: @main-theme-color;
        .box-shadow-base(1px 1px 3px 0 @color-gray1);
        &:hover {
          background-color: darken(@main-theme-color, 5%);
        }
        &:active {
          background-color: darken(@main-theme-color, 10%);
        }
        &:before {
          content: '\e6b8';
          font-family: 'zw_iconfont';
          font-size: @font-size-base + 14;
          color: @color-global-white;
        }
      }
      .tool-list-active {
        background-color: @color-global-white;
        .box-shadow-base(1px 1px 3px 0 @color-gray2);
        &:hover,
        &:active {
          background-color: @color-global-white;
        }
        &:before {
          color: @main-theme-color;
        }
      }
      /*会议操作*/
      .tool-menu-meeting {
        .layout-relative-base();
        .box-shadow-base(1px 1px 3px 0 @color-gray4);
        background-color: @main-theme-color;
        &:hover {
          background-color: darken(@main-theme-color, 5%);
        }
        &:active {
          background-color: darken(@main-theme-color, 10%);
        }
        &:before {
          line-height: @tool-list-width - @tool-list-gap * 2;
          content: '报名';
          font-size: @font-size-base + 2;
          color: @color-global-white;
        }
      }
    }
    .wx-tool-note {
      .layout-fixedrb-base(0, @tool-list-gap, 250);
      height: @tool-list-width;
      > li:after {
        color: @color-gray6;
      }
    }
    /*第二层菜单按钮*/
    .wx-tool-menu {
      .layout-fixedlb-base(0, @tool-list-width - @tool-list-gap, 240);
      min-height: @tool-list-width;
      max-height: 90vh;
      > li {
        float:left;
        .layout-relative-base();
        .box-shadow-base(1px 1px 3px 0 @color-gray4);
        span {
          .layout-relative-base(0, 0, 5);
          width: 100%;
          height: 100%;
          display: block;
          line-height: 0;
          &:before,
          &:after {
            position: absolute;
            z-index: 10;
            cursor: pointer;
            display: inline-block;
            width: @span-icon-width;
            height: @span-icon-width;
            text-align: center;
            line-height: @span-icon-width;
          }
        }
        &:before,
        span:before,
        span:after {
          font-family: 'zw_iconfont';
        }
        &:before {
          .layout-absolutel-base();
          line-height: @tool-list-width - @tool-list-gap * 2;
          color: @color-global-white;
        }
        &:after {
          .layout-absolutel-base(110%);
          .text-ww();
          display: inline-block;
          width: 150px;
          height: 100%;
          color: @color-global-white;
          font-size: @font-size-base + 4;
          line-height: @tool-list-width - @tool-list-gap * 2;
          content: attr(data-title);
        }
      }
      /*会议报名*/
      .tool-menu-meeting {
        background-color: @color-blue1;
        span:before {
          background-color: @color-blue1;
          .border-radius-base(50%);
          overflow: hidden;
          font-weight: bold;
          left: 55%;
          top: 45%;
          font-size: @font-size-base * 1.2;
          content: '\e66f';
          color: @color-global-white;
        }
        &:hover {
          background-color: darken(@color-blue1, 5%);
          span:before {
            background-color: darken(@color-blue1, 5%);
          }
        }
        &:active {
          background-color: darken(@color-blue1, 10%);
          span:before {
            background-color: darken(@color-blue1, 10%);
          }
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e7e4';
        }
      }
      /*待办--送出*/
      .tool-menu-send {
        background-color: @color-green2;
        span:before {
          background-color: @color-green2;
          .border-radius-base(50%);
          font-weight: bold;
          left: 55%;
          top: 50%;
          font-size: @font-size-base * 1.2;
          content: '\e655';
          color: @color-global-white;
        }
        &:hover {
          background-color: darken(@color-green2, 5%);
          span:before {
            background-color: darken(@color-green2, 5%);
          }
        }
        &:active {
          background-color: darken(@color-green2, 10%);
          span:before {
            background-color: darken(@color-green2, 10%);
          }
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e607';
        }
      }
      /*待办--保存*/
      .tool-menu-save {
        background-color: lighten(@color-blue1, 10%);
        &:hover {
          background-color: lighten(@color-blue1, 5%);
        }
        &:active {
          background-color: @color-blue1
        }
        &:before {
          font-weight: bold;
          font-size: @font-size-base * 1.7;
          content: '\e69e';
        }
      }
      /*待办--退件*/
      .tool-menu-return {
        background-color: @color-global-pink;
        span:before {
          background-color: @color-global-pink;
          overflow: hidden;
          height: @span-icon-width/2;
          line-height: @span-icon-width/2;
          left: 45%;
          top: 60%;
          font-size: @font-size-base * 1.3;
          content: '\e61a';
          color: @color-global-white;
        }
        &:hover {
          background-color: darken(@color-global-pink, 5%);
          span:before {
            background-color: darken(@color-global-pink, 5%);
          }
        }
        &:active {
          background-color: darken(@color-global-pink, 10%);
          span:before {
            background-color: darken(@color-global-pink, 10%);
          }
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e63e';
        }
      }
      /*待办--套红*/
      .tool-menu-red {
        background-color: lighten(@color-orange1, 5%);
        &:hover {
          background-color: @color-orange1;
        }
        &:active {
          background-color: darken(@color-orange1, 5%);
        }
        &:before {
          font-size: @font-size-base * 1.7;
          content: '\e607';
        }
      }
      /*待办--退文*/
      .tool-menu-back {
        background-color: @color-global-purple;
        span:before {
          background-color: @color-global-purple;
          .border-radius-base(50%);
          font-weight: bold;
          overflow: hidden;
          left: 50%;
          top: 50%;
          font-size: @font-size-base * 1.4;
          content: '\e650';
          color: @color-global-white;
        }
        &:hover {
          background-color: darken(@color-global-purple, 5%);
          span:before {
            background-color: darken(@color-global-purple, 5%);
          }
        }
        &:active {
          background-color: darken(@color-global-purple, 10%);
          span:before {
            background-color: darken(@color-global-purple, 10%);
          }
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e607';
        }
      }
      /*待办--转办*/
      .tool-menu-turn {
        background-color: @color-global-indigo;
        span:before {
          background-color: @color-global-white;
          .border-radius-base(50%);
          font-font: @fontfamliy-base;
          overflow: hidden;
          left: 50%;
          top: 50%;
          font-size: @font-size-base - 4;
          content: '转';
          color: @color-global-indigo;
        }
        &:hover {
          background-color: darken(@color-global-indigo, 5%);
        }
        &:active {
          background-color: darken(@color-global-indigo, 10%);
        }
        &:before {
          font-weight: bold;
          font-size: @font-size-base * 1.8;
          content: '\e7d9';
        }
      }
      /*待办--办结*/
      .tool-menu-finish{
        background-color: @color-red1;
        span:before {
          background-color: @color-red1;
          .border-radius-base(50%);
          font-weight: bold;
          overflow: hidden;
          left: 55%;
          top: 50%;
          font-size: @font-size-base * 1.2;
          content: '\e601';
          color: @color-global-white;
        }
        &:hover {
          background-color: darken(@color-red1, 5%);
          span:before {
            background-color: darken(@color-red1, 5%);
          }
        }
        &:active {
          background-color: darken(@color-red1, 10%);
          span:before {
            background-color: darken(@color-red1, 10%);
          }
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e607';
        }
      }
      /*待办--发送通知*/
      .tool-menu-notice {
        background-color:darken(@color-yellow1, 10%);
        &:hover {
          background-color: darken(@color-yellow1, 15%);
        }
        &:active {
          background-color: darken(@color-yellow1, 20%);
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e7c7';
        }
      }
      /*待办--发送公文*/
      .tool-menu-document{
        background-color: @color-blue1;
        span:before {
          background-color: @color-blue1;
          .border-radius-base(50%);
          font-weight: bold;
          left: 55%;
          top: 45%;
          font-size: @font-size-base;
          content: '\e786';
          color: @color-global-white;
        }
        &:hover {
          background-color: darken(@color-blue1, 5%);
          span:before {
            background-color: darken(@color-blue1, 5%);
          }
        }
        &:active {
          background-color: darken(@color-blue1, 10%);
          span:before {
            background-color: darken(@color-blue1, 10%);
          }
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e607';
        }
      }
      /*待办--查看公文*/
      .tool-menu-look{
        background-color: darken(@color-yellow1, 10%);
        span:before {
          background-color: darken(@color-yellow1, 10%);
          .border-radius-base(50%);
          font-weight: bold;
          left: 50%;
          top: 45%;
          font-size: @font-size-base;
          content: '\e6bb';
          color: @color-global-white;
        }
        &:hover {
          background-color: darken(@color-yellow1, 15%);
          span:before {
            background-color: darken(@color-yellow1, 15%);
          }
        }
        &:active {
          background-color: darken(@color-yellow1, 20%);
          span:before {
            background-color: darken(@color-yellow1, 20%);
          }
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e607';
        }
      }
      /*待办--送经办人*/
      .tool-menu-handle{
        background-color: @color-global-teal;
        &:hover {
          background-color: darken(@color-global-teal, 5%);
        }
        &:active {
          background-color: darken(@color-global-teal, 10%);
        }
        &:before {
          font-size: @font-size-base * 1.8;
          content: '\e7c5';
        }
      }











      /*写便签*/
      .tool-list-note {
        .layout-relative-base();
        .box-shadow-base(1px 1px 3px 0 @color-gray6);
        background-color: @main-theme-color;
        &:hover {
          background-color: darken(@main-theme-color, 5%);
        }
        &:active {
          background-color: darken(@main-theme-color, 10%);
        }
        &:before {
          content: '\e66f';
          font-family: 'zw_iconfont';
          font-size: @font-size-base * 2.2;
          color: @color-global-white;
        }
      }
    }

    /*写信息*/
    .wx-tool-textarea {
      .layout-fixedl-base(0, 0, 210);
      width: 100vw;
      height: 100vh;
      padding: @grid-list-gap;
      background-color: rgba(255, 255, 255, .9);
      .text-info {
        padding: @grid-list-gap;
        width: 100%;
        min-height: 50%;
        height: 80%;
        textarea {
          .border-radius-base(5px);
          width: 100%;
          height: 100%;
          line-height: @font-size-base + 14;
          padding: @grid-list-gap;
          font-size: @font-size-base + 2;
          color: @color-gray3;
          background-color: @color-global-white;
          border: 1px solid @color-gray12;
        }
      }
    }
  }
}

.wx-tool-function();