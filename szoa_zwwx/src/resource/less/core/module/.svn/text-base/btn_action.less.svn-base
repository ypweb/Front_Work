/*底部操作操作按钮*/
.wx-btnaction-wrap {
  @action-btn-gap-top: 10px;
  @action-size:@font-size-base + 2;

  .layout-fixedlb-base();
  width: 100%;
  height: @action-btn-height;
  padding: @action-btn-gap-top 0;
  margin:0;
  background-color: @color-global-white;
  border-top: 1px solid darken(@color-gray13, 1.6%);
  font-size: 0;
  > li {
    width: 100%;
    font-size: @action-size;
    display: inline-block;
    line-height: @action-btn-height - @action-btn-gap-top * 2;
    text-align: center;
    cursor: pointer;
    .transition-base(all .2s ease-in .02s);
    &,
    &:hover,
    &:active,
    &:focus{
      .user-tap-base();
    }
  }
  .wx-btnaction-cancel {
    color: @color-gray9;
    &:hover{
      color: @color-gray8;
    }
    &:active{
      color: @color-gray7;
    }
  }
  .wx-btnaction-sure {
    color: @main-theme-color;
    &:hover{
      color: darken(@main-theme-color,10%);
    }
    &:active{
      color: darken(@main-theme-color,15%);
    }
  }
}

/*底部按钮组--分组-2列*/
.wx-btnaction-item2 {
  > li {
    width: 50%;
    &:first-child {
      border-right: 1px solid darken(@color-gray14, 3.6%);
    }
  }
}
/*底部按钮组--分组-3列*/
.wx-btnaction-item3 {
  > li {
    width: 33.33333%;
    border-right: 1px solid darken(@color-gray14, 3.6%);
    &:last-child {
      border-right: none;
    }
  }
}
/*底部按钮组--分组-4列*/
.wx-btnaction-item4 {
  > li {
    width: 25%;
    border-right: 1px solid darken(@color-gray14, 3.6%);
    &:last-child {
      border-right: none;
    }
  }
}
/*底部按钮组--分组-5列*/
.wx-btnaction-item5 {
  > li {
    width: 20%;
    border-right: 1px solid darken(@color-gray14, 3.6%);
    &:last-child {
      border-right: none;
    }
  }
}








